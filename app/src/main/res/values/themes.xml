<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HappyPlaces" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/prussian_blue</item>
        <item name="colorPrimaryVariant">@color/oxford_blue</item>
        <item name="colorOnPrimary">@color/polished_pine</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/burly_wood</item>
        <item name="colorSecondaryVariant">@color/copper_orange</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="customActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/oxford_blue</item>
    </style>

    <style name="customToolBarStyle">
        <item name="android:textColorPrimary">@color/white</item>//changes action bar title color
        <item name="colorControlNormal">@color/white</item>//changes setUpActionBar back pressed icon color
    </style>
</resources>